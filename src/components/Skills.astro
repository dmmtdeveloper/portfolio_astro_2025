---
import Code from "@components/icons/Code.astro";
import TitleSection from "@components/TitleSection.astro";
import Astroicon from "@components/icons/Astroicon.astro";
---

<section id="skills" data-section="skills " class="pt-44">
  <TitleSection>
    <Code class="size-8" />
    Skills
  </TitleSection>
  <div class="lg:w-[740px] mx-auto sm:px-0 pt-12 lg:px-[28px] px-4">
    <div
      class="inline-flex flex-nowrap overflow-hidden
             [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-200px),transparent_100%)]
             w-[250px] mx-[calc((100%-250px)/2)] md:w-[750px] md:mx-[calc((100%-750px)/2)]"
    >
      <ul
        class="flex lg:gap-2 gap-8 items-center justify-center md:justify-start
               [&_li]:mx-2 xl:[&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll
               min-w-max"
      >
        <li><img src="/src/assets/html-5-clean.svg" alt="HTML" class="size-10" /></li>
        <li><img src="/src/assets/css-3-clean.svg" alt="CSS" class="h-10" /></li>
        <li><img src="/src/assets/tailwindcss-icon.svg" alt="Tailwind" class="size-16" /></li>
        <li><img src="/src/assets/javascript.svg" alt="JavaScript" class="size-10" /></li>
        <li><img src="/src/assets/typescript-icon.svg" alt="TypeScript" class="h-10" /></li>
        <li><Astroicon alt="astro"/></li>
        <li><img src="/src/assets/react.svg" alt="react" class="h-10" /></li>
        <li><img src="/src/assets/postman-icon.svg" alt="postman" class="h-10" /></li>
        <li><img src="/src/assets/material-ui.svg" alt="material" class="h-10" /></li>
        <li><img src="/src/assets/figma.svg" alt="figma" class="h-10" /></li>
      </ul>

      <ul
        class="flex lg:gap-2 gap-8 items-center justify-center md:justify-start
      [&_li]:mx-2 xl:[&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll
      min-w-max"
      >
        <li><img src="/src/assets/html-5-clean.svg" alt="HTML" class="size-10" /></li>
        <li><img src="/src/assets/css-3-clean.svg" alt="CSS" class="h-10" /></li>
        <li><img src="/src/assets/tailwindcss-icon.svg" alt="Tailwind" class="size-16" /></li>
        <li><img src="/src/assets/javascript.svg" alt="JavaScript" class="size-10" /></li>
        <li><img src="/src/assets/typescript-icon.svg" alt="TypeScript" class="h-10" /></li>
        <li><Astroicon /></li>
        <li><img src="/src/assets/react.svg" alt="react" class="h-10" /></li>
        <li><img src="/src/assets/postman-icon.svg" alt="postman" class="h-10" /></li>
        <li><img src="/src/assets/material-ui.svg" alt="material" class="h-10" /></li>
        <li><img src="/src/assets/figma.svg" alt="figma" class="h-10" /></li>
      </ul>
    </div>
  </div>
</section>

<style>
  .animate-infinite-scroll {
    display: flex;
    animation: infinite-scroll 20s linear infinite;
  }

  @keyframes infinite-scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-100%);
    }
  }
</style>
