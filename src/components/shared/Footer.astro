---
import SectionContainer from "@components/SectionContainer.astro";
import DarkModeButton from "@components/ui/darkModeButton";

const currentYear = new Date().getFullYear();

const footerItems = [
  {
    title: "inicio",
    link: "/",
  },
  {
    title: "proyectos",
    link: "/#proyectos",
  },
  {
    title: "skills",
    link: "/#skills",
  },
  {
    title: "sobre mí",
    link: "/#sobre-mi",
  },
];

const contactItems = [
  {
    title: "dmmtapia.ux@gmail.com",
    link: "mailto:dmmtapia.ux@gmail.com",
  },
  {
    title: "+56 956918388",
  },
  {
    title: "Github",
    link: "https://github.com/dmmtdeveloper",
  },
];
---

<SectionContainer>
  <section class="pt-10 flex justify-center items-center flex-col md:mt-24">
    <div class="flex-1 flex flex-col gap-2">
      <div class="md:flex gap-4 flex-row md:mt-0 hidden">
        <DarkModeButton client:load/>
      </div>
    </div>
    <div class="flex flex-col sm:flex-row lg:items-start xl:items-start md:flex-row pb-2 w-full">

      <div class="lg:flex-[1] w-full flex xl:flex-row justify-between flex-wrap">
        <div class="flex flex-col min-w-[150px]">
          <div>
            <h4 class="dark:text-white text-black text-small font-semibold leading-[27px]">Contacto</h4>
          </div>

          <div>
            {
              contactItems.map((item) => (
                <ul>
                  <li class="my-2 text-sm leading-[24px] cursor-pointer">
                    <a target="_blank" rel="noopener noreferrer" href={item.link}>
                      {item.title}
                    </a>
                  </li>
                </ul>
              ))
            }
          </div>
        </div>
      </div>

      <div class="flex flex-col min-w-[150px]">
        <div>
          <h4 class="dark:text-white text-black text-small font-semibold leading-[27px]">Información</h4>
        </div>

        <div>
          <div style="opacity: 1; transform: none; will-change: auto;">
            {
              footerItems.map((item) => (
                <ul>
                  <li class="hover:text-sky-400 transition-all capitalize my-2 text-sm leading-[24px] cursor-pointer">
                    <a href={item.link}>{item.title}</a>
                  </li>
                </ul>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </section>

  <div
    class="w-full md:flex-col flex justify-between items-center flex-col border-t-[1px] dark:border-t-gray-800 border-t-black-200 pb-4"
  >
    <small class="dark:text-white-200 text-black-200 text-xs text-center mt-4"
      >portfolio ©{currentYear} realizado con astro y tailwindcss. casi todos los derechos reservados</small
    >
  </div>
</SectionContainer>
