<script>
  const themeOptions = document.querySelectorAll(".theme-option");

  // Detecta la preferencia del usuario
  const getTheme = () => localStorage.getItem("theme") || "system";

  // Aplica el tema seleccionado
  const applyTheme = (theme: string) => {
    document.documentElement.classList.toggle(
      "dark",
      theme === "dark" || (theme === "system" && window.matchMedia("(prefers-color-scheme: dark)").matches)
    );
  };

  // Cambia la selección de los botones visualmente
  const updateSelection = (selectedTheme: string) => {
    themeOptions.forEach((option) => {
      option.classList.toggle("bg-gray-300", (option as HTMLElement).dataset.theme === selectedTheme); // Para el tema claro
      option.classList.toggle("dark:bg-gray-700", (option as HTMLElement).dataset.theme === selectedTheme); // Para el tema oscuro
    });
  };

  // Aplica el tema actual
  const currentTheme = getTheme();
  applyTheme(currentTheme);
  updateSelection(currentTheme);

  // Agrega evento a cada opción de tema
  themeOptions.forEach((option) => {
    option.addEventListener("click", () => {
      const selectedTheme = (option as HTMLElement).dataset.theme;
      localStorage.setItem("theme", selectedTheme || "");
      applyTheme(selectedTheme || "system");
      updateSelection(selectedTheme || "system");
    });
  });

  // Detecta cambios en la configuración del sistema
  window.matchMedia("(prefers-color-scheme: dark)").addEventListener("change", () => {
    if (getTheme() === "system") {
      applyTheme("system");
    }
  });
</script>
